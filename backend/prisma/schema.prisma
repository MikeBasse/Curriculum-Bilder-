generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(cuid())
  email            String   @unique
  passwordHash     String
  name             String
  school           String?
  emailVerified    Boolean  @default(false)
  subscriptionTier String   @default("free")
  refreshToken     String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  projects      Project[]
  documents     Document[]
  generations   Generation[]
  usageTracking UsageTracking[]
}

model Project {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  subject     String?
  gradeLevel  String?
  tags        Json?    @default("[]")
  archived    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  documents   Document[]
  generations Generation[]

  @@index([userId])
}

model Document {
  id            String   @id @default(cuid())
  projectId     String
  userId        String
  filename      String
  fileType      String
  fileSize      Int
  storagePath   String
  extractedText String?  @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([userId])
}

model Generation {
  id                String   @id @default(cuid())
  projectId         String
  userId            String
  type              String   // 'lesson', 'program', 'assessment'
  title             String
  content           Json     @default("{}")
  sourceDocumentIds Json?    @default("[]")
  version           Int      @default(1)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([userId])
}

model UsageTracking {
  id        String   @id @default(cuid())
  userId    String
  action    String   // 'generation', 'export', etc.
  month     String   // Format: 'YYYY-MM'
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, action, month])
  @@index([userId])
}
